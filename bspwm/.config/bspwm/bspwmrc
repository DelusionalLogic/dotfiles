#! /bin/bash
bspc config border_width         1
bspc config window_gap           10

bspc config split_ratio          0.50
bspc config borderless_monocle   false
bspc config gapless_monocle      false
bspc config focus_by_distance    true
bspc config click_to_focus       any
bspc config pointer_modifier     mod4
bspc config focused_border_color $(colorget 2)
bspc config normal_border_color  $(colorget 5)
bspc config urgent_border_color  $(colorget 1)
# bspc config top_padding          17

bspc config external_rules_command $HOME/.config/bspwm/external_rules

bspc rule -a "*:jit"             state=floating
bspc rule -a "*:steamwebhelper"  state=floating desktop=5  follow=on
bspc rule -a maps                state=floating
bspc rule -a feh                 state=floating
bspc rule -a mplayer2            state=floating
bspc rule -a mpv                 state=floating
bspc rule -a "*:vlc"             state=floating
bspc rule -a "*:vis"             state=floating border=off "monitor=^2" sticky=on
bspc rule -a "*:pavucontrol"     state=floating
bspc rule -a Kupfer.py           state=floating
bspc rule -a Screenkey           manage=off
bspc rule -a "Google Play Music Desktop Player" desktop=10 follow=off
bspc rule -a "streamlink-twitch-gui"            desktop=6 border=on follow=off
bspc rule -a "Zathura"           state=tiled
bspc rule -a "steam_app_1222670" state=floating

# polkit
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# wallpaper
wallpaper apply

# hotkeys
sxhkd &
xbindkeys &

xsetroot -cursor_name left_ptr &

#xflux -l 57.0137 -g 9.9832 &

neocomp --config ~/.config/neocomp.conf &

wmname LG3D

# {
# 	sleep 1.5
# 	~/bard/build/bard_src/bard -c ~/.config/bard 1>&2 2>/tmp/bard
# } &

source ~/.config/bspwm/device
source ~/.config/bspwm/startup
