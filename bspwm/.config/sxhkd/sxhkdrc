# Xorg Colors
#
# bspwm hotkeys
#

super + alt + {shift + ,_}Escape
	{bspc quit 1,\
	bspc wm -d > "$BSPWM_STATE",
		bspc quit 1}

super + w
	bspc node -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {shift+s,s,f,d}
	bspc node -t {pseudo_tiled,floating,fullscreen,tiled}

super + alt + {shift+s,s,f,d}
	bspc rule -a \* -o state={pseudo_tiled,floating,fullscreen,tiled}

super + alt + {1-9,0}
	bspc rule -a \* -o desktop=^{1-9,10}

super + alt + space
	bspc rule -r \*

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

super + m
	bspc node -s biggest

super + {_,shift + ,ctrl + }{h,j,k,l}
	bspc node -{f,s,p} {west,south,north,east}

super + {z,x}
	bspc node -f @{parent,first}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc node -C {backward,forward}

super + {_,shift + }r
    bspc node @{_,/} -R 90

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + space
	bspc {node -p cancel}

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

super + ctrl + {1-9}
	bspc node -o 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

super + {ae, oslash}
	bspc desktop -f {prev,next}.free

#
# wm independent hotkeys
#

super + Return
	alacritty

super + alt + Return
	rofi -show window -fuzzy -hide-scrollbar
	#simpleswitcher -now

super + shift + Return
	rofi -show ssh -fuzzy -hide-scrollbar

super + space
	rofi -show run -fuzzy -hide-scrollbar -color-enabled
#	~/.config/bar/dmenu.sh	
#
super + e
	~/scripts/shutdown_rofi.sh

super + q
	~/scripts/lock.sh

super + p
	rofi -modi bitwarden:rofi-bitwarden -show bitwarden

Caps_Lock
	~/scripts/capsinform

Print; w
	$HOME/.localbin/scrot-clip -a

XF86AudioLowerVolume
	/sbin/amixer -D pulse sset Master 5%-

XF86AudioRaiseVolume
	/sbin/amixer -D pulse sset Master 5%+

XF86AudioMute
	/sbin/amixer -D pulse sset Master toggle

XF86AudioPlay
	dbus-send --session --type=method_call --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

XF86AudioPrev
	dbus-send --session --type=method_call --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

XF86AudioNext
	dbus-send --session --type=method_call --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

XF86AudioRewind
	dbus-send --session --type=method_call --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Seek int64:-2000000

XF86AudioForward
	dbus-send --session --type=method_call --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Seek int64:2000000

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
