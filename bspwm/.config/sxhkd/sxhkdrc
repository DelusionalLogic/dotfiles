# Xorg Colors
#
# bspwm hotkeys
#

super + alt + {shift + ,_}Escape
	{bspc quit 1,\
	 bspc query -T > "$BSPWM_TREE"; \
		bspc query -H > "$BSPWM_HISTORY"; \
		bspc query -S > "$BSPWM_STACK"; \
		bspc quit 1}

super + w
	bspc node -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {shift+s,s,f,d}
	bspc node -t {pseudo_tiled,floating,fullscreen,tiled}

super + alt + {shift+s,s,f,d}
	bspc rule -a \* -o state={pseudo_tiled,floating,fullscreen,tiled}

super + alt + {1-9,0}
	bspc rule -a \* -o desktop=^{1-9,10}

super + alt + space
	bspc rule -r \*

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc node -w last.manual

super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + r
    bspc desktop -R 90

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + z
	bspc control --toggle-visibility

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + space
	bspc {node -p cancel}

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

super + ctrl + {1-9}
	bspc node -o 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

super + {ae, oslash}
	bspc desktop -f {prev,next}.free

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvtc

super + alt + Return
	rofi -show window -fuzzy -hide-scrollbar
	#simpleswitcher -now

super + shift + Return
	rofi -show ssh -fuzzy -hide-scrollbar

super + space
	rofi -show run -fuzzy -hide-scrollbar
#	~/.config/bar/dmenu.sh	
#
super + e
	~/scripts/shutdown_rofi.sh

super + q
	~/scripts/lock.sh

super + p
	passmenu

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
